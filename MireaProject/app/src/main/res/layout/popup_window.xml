<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/bagr"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/currentFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content of dile.txt"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/currentFileContent"
                android:layout_below="@id/currentFileName"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:text="Here presented the encrypted content of the whole file"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <Button
                android:layout_marginTop="10dp"
                android:layout_below="@id/currentFileContent"
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:text="Save file"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>